# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET    /                         controllers.Application.index()
GET    /loginpage                controllers.Application.loginpage()
POST   /login                    controllers.Application.login()
GET    /logout                   controllers.Application.logout()
GET    /signup                   controllers.Application.signup()
GET    /loginToComplete          controllers.Application.loginToComplete()

POST   /register                 controllers.AdminController.register()
POST   /updateUser               controllers.AdminController.adminUpdateUser(id: Long)
POST   /userList                 controllers.AdminController.searchUsers(qU: String)
POST   /changePassword/:id       controllers.AdminController.changePass(id: Long)
GET    /employeeList             controllers.AdminController.listOfEmployees()
GET    /sendRequest              controllers.AdminController.sendRequest(email: String)
GET    /control-panel/user/:id   controllers.AdminController.controlPanel(id: Long)
GET    /deleteUser/              controllers.AdminController.deleteUser(id: Long) 
GET    /editUser/:email          controllers.AdminController.adminEditUserView(email: String)
GET    /profile/@:email          controllers.AdminController.profilePage(email: String)
GET    /changePass/:id           controllers.AdminController.newPassword(id: Long)

GET    /addVehicle               controllers.VehicleController.addVehicleView()
GET    /showVehicle/:id          controllers.VehicleController.showVehicle(id: Long)
POST   /addVehicle               controllers.VehicleController.addVehicle()
GET    /allVehicles              controllers.VehicleController.listVehicles()
GET    /editVehicle              controllers.VehicleController.editVehicleView(id: Long)
POST   /editVehicle/:id          controllers.VehicleController.editVehicle(id: Long)
GET    /deleteVehicle/:id        controllers.VehicleController.deleteVehicle(id: Long)

POST   /addVehicles/:id          controllers.FleetController.addVehicles(id: Long)
GET    /addFleet                 controllers.FleetController.addFleetView()
GET    /showFleet/:id            controllers.FleetController.showFleet(id: Long)
POST   /addFleet                 controllers.FleetController.addFleet()
GET    /allFleets                controllers.FleetController.listFleets()
GET    /editFleet                controllers.FleetController.editFleetView(id: Long)
POST   /editFleet/:id            controllers.FleetController.editFleet(id: Long)
GET    /deleteFleet/:id          controllers.FleetController.deleteFleet(id: Long)
GET    /deleteVehicles           controllers.FleetController.deleteVehicle(vid: Long, fid: Long)
GET    /addtruck                 controllers.TruckController.addTruck()
GET    /showtruck/:id            controllers.TruckController.showTruck(id: Int)
POST   /createtruck              controllers.TruckController.createTruck()
GET    /alltrucks                controllers.TruckController.listTrucks()
GET    /removetruck/:id          controllers.TruckController.removeTruck(id: Int)
POST   /editTruck                controllers.TruckController.adminUpdateTruck(id: Long)
GET    /editTruckView/:id        controllers.TruckController.editTruckView(id: Long)

GET    /addtrain                 controllers.TrainController.addTrain()
GET    /showtrain/:id            controllers.TrainController.showTrain(id: Int)
POST   /createtrain              controllers.TrainController.createTrain()
GET    /alltrains                controllers.TrainController.listTrains()
GET    /removetrain/:id          controllers.TrainController.removeTrain(id: Int)
GET    /edittrainview/:id        controllers.TrainController.editTrainView(id:Int)
POST   /savetrain/:id            controllers.TrainController.saveEditedTrain(id: Long)

GET    /addvendor                controllers.VendorController.addVendor()
GET    /showvendor/:id           controllers.VendorController.showVendor(id: Int)
POST   /createvendor             controllers.VendorController.createVendor()
GET    /allvendors               controllers.VendorController.listVendors()
GET    /removevendor/:id         controllers.VendorController.removeVendor(id: Int)
GET    /editvendorview/:id       controllers.VendorController.editVendorView(id: Int)
POST   /savevendor/:id           controllers.VendorController.saveEditedVendor(id: Int)


GET    /addDriver                controllers.DriverController.addDriverView()
GET    /showDriver/:id           controllers.DriverController.showDriver(id: Long)
POST   /createDriver             controllers.DriverController.addDriver()
GET    /allDrivers               controllers.DriverController.listDrivers()
GET    /editDriverView           controllers.DriverController.editDriverView(id: Long)
POST   /editDriver/:id           controllers.DriverController.editDriver(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file             controllers.Assets.at(path="/public", file)
GET    /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
