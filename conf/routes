# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/addtruck					controllers.TruckController.addTruck()
GET     /showtruck/:id			controllers.TruckController.showTruck(id: Int)
POST	/createtruck				controllers.TruckController.createTruck()
GET		/alltrucks				controllers.TruckController.listTrucks()
GET    /removetruck/:id      	controllers.TruckController.removeTruck(id: Int)
GET		/addtrain					controllers.TrainController.addTrain()
GET     /showtrain/:id			controllers.TrainController.showTrain(id: Int)
POST	/createtrain				controllers.TrainController.createTrain()
GET		/alltrains				controllers.TrainController.listTrains()
GET    /removetrain/:id      	controllers.TrainController.removeTrain(id: Int)
GET		/addvendor					controllers.VendorController.addVendor()
GET     /showvendor/:id			controllers.VendorController.showVendor(id: Int)
POST	/createvendor				controllers.VendorController.createVendor()
GET		/allvendors				controllers.VendorController.listVendors()
GET    /removevendor/:id      	controllers.VendorController.removeVendor(id: Int)
GET		/editvendorview/:id			controllers.VendorController.editVendorView(id: Int)
POST	/savevendor/:id					controllers.VendorController.saveEditedVendor(id: Int)
GET		/edittrainview/:id				controllers.TrainController.editTrainView(id:Int)
POST	/savetrain/:id					controllers.TrainController.saveEditedTrain(id: Int)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
