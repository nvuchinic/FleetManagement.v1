# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                         controllers.Application.index()
GET    /loginpage                controllers.Application.loginpage()
POST   /login                    controllers.Application.login()
GET    /logout                   controllers.Application.logout()
GET    /signup                   controllers.Application.signup()
GET    /loginToComplete          controllers.Application.loginToComplete()

POST   /register                 controllers.AdminController.register()
POST   /updateUser               controllers.AdminController.adminUpdateUser(id: Long)
POST   /userList                 controllers.AdminController.searchUsers(qU: String)
GET    /employeeList             controllers.AdminController.listOfEmployees()
GET    /sendRequest              controllers.AdminController.sendRequest(email: String)
GET    /control-panel/user/:id   controllers.AdminController.controlPanel(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file             controllers.Assets.at(path="/public", file)
GET    /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
